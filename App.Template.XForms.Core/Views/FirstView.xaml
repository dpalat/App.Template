<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage
    x:Class="App.Template.XForms.Core.Views.FirstView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns:views="clr-namespace:MvvmCross.Forms.Core;assembly=MvvmCross.Forms"
    Title="First view">
    <StackLayout
        HorizontalOptions="Center"
        Orientation="Vertical"
        VerticalOptions="Center">
        <Label
            mvx:Bi.nd="Text Format('FirstViewModel has been instantiated {0} times.', CtorCount)"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        <Button
            mvx:Bi.nd="Command ResetCounter"
            HorizontalOptions="Center"
            Text="Reset counter"
            VerticalOptions="Center" />
    </StackLayout>
</views:MvxContentPage>